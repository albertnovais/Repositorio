@model Rosnando_semG.Models.Animais

@{
    ViewBag.Title = "Raca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Raca</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Animais</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.animal_id)

    <div class="form-group" id="divRaca">
            @Html.Label("Raça do Animal")
            <div class="col-md-10">
                @Html.DropDownList("animal_raca_id", ViewBag.racaanimal as IEnumerable<SelectListItem>, "Raça", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.animal_raca_id, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar" class="btn btn-light" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
