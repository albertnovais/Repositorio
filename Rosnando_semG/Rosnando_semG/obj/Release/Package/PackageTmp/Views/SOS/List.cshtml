@model IEnumerable<Rosnando_semG.Models.Dica>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SOS</h2>

<a class="btn btn-danger" href="@Url.Action("Create")">
    <i class="fa fa-plus"></i>
    Novo SOS

</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Titulo")
        </th>
        <th>
            @Html.DisplayName("Descrição")
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th>
            @Html.DisplayName("Data")
        </th>

        <th>
            @Html.DisplayName("Animal")
        </th>
        <th>
            @Html.DisplayName("Dica")
        </th>
        <th>
            @Html.DisplayName("Usuario")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dica_titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dica_descricao)
            </td>

            @if (item.dica_status == true)
            {
                <td>
                    @Html.DisplayName("Ativa")
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayName("Apagada")
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.dica_data)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.TipoAnimal.tipo_animal_descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDica.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.usuario_nome)
            </td>
            <td>

                <a href="@Url.Action("Details","Dicas", new { dica_id = item.dica_id})" class="btn btn-danger text-light" title="detalhes">
                    <i class="fa fa-eye"></i>
                </a>
                @if (HttpContext.Current.User.IsInRole("Administrador"))
                {
                    <a href="@Url.Action("Edit","Dicas", new { dica_id = item.dica_id})" class="btn btn-danger text-light" title="editar">
                        <i class="fa fa-edit"></i>
                    </a>}

            </td>
        </tr>
    }

</table>
