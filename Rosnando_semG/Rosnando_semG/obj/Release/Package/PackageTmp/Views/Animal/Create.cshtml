@model Rosnando_semG.Models.Animais

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal div_esqueleto">
        <h4 style="margin-top: 2%;">Novo Animal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Nome do Animal")
            <div class="col-md-10">
                @Html.EditorFor(model => model.animal_nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.animal_nome, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.Label("Tipo do Animal")
            <div class="col-md-10">
                @Html.DropDownList("tipo_animal_id", ViewBag.tipoanimal as IEnumerable<SelectListItem>, "Animal", htmlAttributes: new { @class = "form-control", @onchange = "$(this.form).submit" })
                @Html.ValidationMessageFor(model => model.tipo_animal_id, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-light" />
            </div>
        </div>
    </div>
}

