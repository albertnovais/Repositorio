@model Rosnando_semG.Models.Dica

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo SOS</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Titulo")
            <div class="col-md-10">
                @Html.EditorFor(model => model.dica_titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Descrição")
            <div class="col-md-10">
                @Html.EditorFor(model => model.dica_descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_descricao, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.Label("Tipo sos")
            <div class="col-md-10">
                @Html.DropDownList("tipo_dica_id", ViewBag.tipodica as IEnumerable<SelectListItem>, "SOS", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipo_dica_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tipo do Animal")
            <div class="col-md-10">
                @Html.DropDownList("tipo_animal_id", ViewBag.tipoanimal as IEnumerable<SelectListItem>, "Animal", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipo_animal_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("SOS")
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.dica_texto, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dica_texto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Imagem")
            <div class="col-md-10">
                @Html.EditorFor(model => model.dica_img, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_img, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}