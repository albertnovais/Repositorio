@model IEnumerable<Rosnando_semG.Models.Dica>
@{
    ViewBag.Title = "Home Page";
    //var t = ViewBag.logado;
    var tiposd = ViewBag.tipodica;
    var tiposs = ViewBag.tiposos;
    var pontos = ViewBag.topp;
    var dono = ViewBag.topd;
    var ani = ViewBag.topa;
    int i = 0;
    var message = ViewBag.message as string;
}

@if (message != null)
{
    <div class="form-group">
        <div class="col-md-12 bg-danger">
            <h5 class="text-center">@message</h5>
        </div>
    </div>

}

<div id="div_banner">
    <div class="div_esqueleto">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/IMG/slide_01.jpg" alt="Abandono" style="height: 250px; width: 100%;">
                    <div class="carousel-caption d-none d-md-block texto_preto_slide">
                        <p>Como denunciar maus tratos a animais. <a href="https://www.worldanimalprotection.org.br/denuncia" target="blank"> Saiba Mais... </a></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/IMG/slide_2.jpg" alt="Adote2" style="height: 250px; width: 100%;">
                    <div class="carousel-caption d-none d-md-block texto_preto_slide">
                        <p>Ajude um destes lindos animais a encontrar um lar.<a href="" target="blank"> Saiba Mais... </a></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/IMG/slide_3.jpg" alt="Vacina" style="height: 250px; width: 100%;">
                    <div class="carousel-caption d-none d-md-block texto_preto_slide">
                        <h3>Como Ganhar.</h3>
                        <p>Saiba como funciona nosso sistema de pontuação.<a href="@Url.Action("Pontos","Home")" target="blank"> Saiba Mais... </a></p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div><!-- DIV banner-->
<div id="div_corpo">
    <div class="div_esqueleto">
        <div class="noticias">
            <div class="div_banner_noticias">
                <div id="banner_dicas">
                    <div class="card mb-2 shadow-sm">
                        <a class="card border-success mb-0" style="width:100%;" href="@Url.Action("Index", "Publico", new { a = 1, b = 0})">
                            <div class="card-header bg-transparent border-success padding_curto text-center l"><h3>Cuidados Diários</h3></div>
                        </a>
                        <img class="card-img-top" src="~/IMG/noticia_dicas_1.png" alt="Miniatura [100% x225]" style="height: 225px; width: 100%; display: block; align-self: center;" data-holder-rendered="true">
                        <div class="card-body">
                            <a class="titulos_noticias l" href="@Url.Action("Index", "Publico", new { a = 1, b = 0})"> <h5 style="font-weight:bold">Dicas de cuidados para seu bichinho. <br> <br></h5></a>
                            <p class="card-text">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        @foreach (var tip in tiposd)
                                        {
                                            <a href="@Url.Action("Index", "Publico", new { a = 1, b = 0, tip.tipo_dica_id})" class="l"> @tip.descricao; </a>
                                        }

                                    </font><font style="vertical-align: inherit;"></font>
                                </font>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- DIV banner_dicas-->

                <div id="banner_sos">
                    <div class="card mb-2 shadow-sm">
                        <a class="card border-danger mb-0" style="width:100%;" href="@Url.Action("Index", "Publico", new { a = 2, b = 0})">
                            <div class="card-header bg-transparent border-danger titulos_center padding_curto text-center l"><h3>Primeiros Socorros</h3></div>
                        </a>
                        <img class="card-img-top" src="~/IMG/noticia_sos_1.png" alt="Miniatura [100% x225]" style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
                        <div class="card-body">
                            <a class="titulos_noticias l" href="@Url.Action("Index", "Publico", new { a = 2, b = 0})"> <h5 style="font-weight:bold">Como agir em caso de emergência. <br> <br></h5></a>
                            <p class="card-text">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        @foreach (var tip in tiposs)
                                        {
                                            <a href="@Url.Action("Index", "Publico", new { a = 2, b = 0, tip.tipo_dica_id})" class="l"> @tip.descricao; </a>
                                        }
                                    </font><font style="vertical-align: inherit;"></font>
                                </font>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- DIV banner_sos-->

                @foreach (var item in Model)
                {

                    <div class="banner_dicas">

                        <div class="card flex-md-row mb-2 shadow-sm h-md-250" style="min-width:350px; min-height: 280px; max-height: 280px">
                            <div class="card-body d-flex flex-column align-items-start">
                                @if (item.TipoDica.primeiro_socorros == false)
                                {
                                    <strong class="d-inline-block mb-2 text-success">@Html.DisplayFor(modelItem => item.TipoDica.descricao)</strong>
                                }
                                else
                                {
                                    <strong class="d-inline-block mb-2 text-danger">@Html.DisplayFor(modelItem => item.TipoDica.descricao)</strong>
                                }
                                <h4 class="mb-0">
                                    <a class="text-dark" href="@Url.Action("Dica", "Publico", new { item.dica_id })" style="font-weight:bold" ;> @Html.DisplayFor(modelItem => item.dica_titulo)</a>
                                </h4>
                                <br>
                                <p class="card-text mb-auto"> @Html.DisplayFor(modelItem => item.dica_descricao)</p>
                                <a href="@Url.Action("Dica", "Publico", new { item.dica_id })">Leia mais...</a>
                            </div>
                            <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" src="@Html.DisplayFor(modelItem => item.dica_img)" data-holder-rendered="true" style="max-width: 150px; max-height: 150px;">
                        </div>
                    </div><!-- DIV banner_dicas-->

                }

            </div><!-- DIV banner_noticias-->
        </div><!-- DIV noticias-->

        <div id="destaques">

            <div class="card bg-light mb-3" style="max-width: 100%;">

                <div class="card-header"> <h4 id="titulo_destaques"> Destaques da Semana </h4></div>
                @foreach (var item in Model)
                {
                    <a href="@Url.Action("Dica", "Publico", new { item.dica_id })" class="card-body" style="padding: 0px; margin: 20px; margin-bottom: 10px;">
                        <div class="card-img-left" style="width: 100%;">
                            <img class="card-img-left" style="height:57px;" src="@Html.DisplayFor(modelItem => item.dica_img)">
                            <div class="card" style="height:57px;">
                                <div class="card-body-text l">
                                    @if (item.TipoDica.primeiro_socorros == false)
                                    {
                                        <strong class="d-inline-block mb-2 text-success">@Html.DisplayFor(modelItem => item.TipoDica.descricao)</strong>
                                    }
                                    else
                                    {
                                        <strong class="d-inline-block mb-2 text-danger ">@Html.DisplayFor(modelItem => item.TipoDica.descricao)</strong>
                                    }
                                    @Html.DisplayFor(modelItem => item.dica_titulo)
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
            @*</div>*@
            @*<div id="destaques">*@

            <div class="card bg-light mb-3" style="max-width: 100%;">

                <div class="card-header"> <h4 id="titulo_destaques"> Top Pontos </h4></div>
                @foreach (var item in pontos)
                {

                    <div class="container">
                        <div class="row">
                            <div class="col-sm-3">
                                @(i += 1)
                                º
                            </div>
                            <div class="col-sm-6">
                                @item.usuario_nome
                                @item.usuario_sobrenome
                            </div>
                            <div class="col-sm-3">
                                @item.usuario_pontos
                            </div>
                        </div>
                    </div>

                    <br />

                }

                @*</div>*@

                <p style="display:none">@(i = 0)</p>


            </div>

            @*<div id="destaques">*@

            <div class="card bg-light mb-3" style="max-width: 100%;">

                <div class="card-header"> <h4 id="titulo_destaques"> Top Donos </h4></div>
                @foreach (var item in dono)
                {

                    <div class="container">
                        <div class="row">
                            <div class="col-sm-3">
                                @(i += 1)
                                º
                            </div>
                            <div class="col-sm-6">
                                @item.usuario_nome
                                @item.usuario_sobrenome
                            </div>
                            <div class="col-sm-3">
                                @item.Animais.Count
                            </div>
                        </div>
                    </div>

                    <br />

                }

            </div>
            <p style="display:none">@(i = 0)</p>
            <div class="card bg-light mb-3" style="max-width: 100%;">

                <div class="card-header"> <h4 id="titulo_destaques"> Top Animais </h4></div>
                @foreach (var item in ani)
                {

                    <div class="container">
                        <div class="row">
                            <div class="col-sm-3">
                                @(i += 1)
                                º
                            </div>
                            <div class="col-sm-6">
                                @item.tipo_animal_descricao
                            </div>
                            <div class="col-sm-3">
                                @item.Animais.Count
                            </div>
                        </div>
                    </div>

                    <br />

                }

            </div>

        </div>
    </div>
</div>