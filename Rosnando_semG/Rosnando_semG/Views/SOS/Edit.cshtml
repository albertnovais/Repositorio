@model Rosnando_semG.Models.Dica

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Edit</h3>
        </div>
        <div class="box-body">

            @Html.HiddenFor(model => model.dica_id)

            <div class="form-group">
                @Html.LabelFor(model => model.dica_titulo)
                @Html.EditorFor(model => model.dica_titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_titulo, "", new { @class = "help-block text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dica_descricao)
                @Html.EditorFor(model => model.dica_descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_descricao, "", new { @class = "help-block text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Tipo do Animal")
                <div class="col-md-10">
                    @Html.DropDownList("tipo_animal_id", ViewBag.tipoanimal as IEnumerable<SelectListItem>, "Animal", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tipo_animal_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dica_status)
                <div class="checkbox">
                    @Html.EditorFor(model => model.dica_status)
                    @Html.ValidationMessageFor(model => model.dica_status, "", new { @class = "help-block text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dica_texto)
                @Html.EditorFor(model => model.dica_texto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_texto, "", new { @class = "help-block text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dica_img)
                @Html.EditorFor(model => model.dica_img, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dica_img, "", new { @class = "help-block text-danger" })
            </div>
            <div class="box-footer">
                <a href="@Url.Action("List")" class="btn btn-default btn-flat">
                    Cancel/back
                </a>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </div>
        </div>
    </div>
}
